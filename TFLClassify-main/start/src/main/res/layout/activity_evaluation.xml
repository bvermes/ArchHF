<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DFBC490"
    android:orientation="vertical"
    tools:context=".EvaluationActivity">

    <ImageView
        android:id="@+id/bestGuessImageView"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="220dp"
        tools:src="@drawable/french_bulldog" />

    <TextView
        android:id="@+id/bestguessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="Hello"
        android:textColor="#A82810"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/desctriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:text="A82810lhdfolghbffuibyvjhlbyfvbrbhgbvfh"
            android:textColor="@color/black" />

    </ScrollView>


</LinearLayout>