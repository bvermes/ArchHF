<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DFBC490"
    android:orientation="vertical"
    tools:context=".EvaluationActivity">

    <ImageView
        android:id="@+id/bestGuessImageView"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="240dp"
        tools:src="@drawable/french_bulldog" />

    <TextView
        android:id="@+id/bestguessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/hello"
        android:textColor="#A82810"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:text="@string/base_description"
            android:textColor="@color/black" />

    </ScrollView>


</LinearLayout>