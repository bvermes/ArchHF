<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="business.MainActivity">

        <Button
            android:id="@+id/screenshootButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screenshoot"
            android:translationX="0dp"
            android:translationY="480dp"
            />

        <Button
            android:id="@+id/changerowsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="150dp"
            android:translationY="480dp"
            android:text="@string/change" />

        <Button
            android:id="@+id/evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evaluate"
            android:translationX="252dp"
            android:translationY="480dp" />


        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </androidx.camera.view.PreviewView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="57.6dp"
            android:layout_gravity="top"
            android:src="@drawable/animalhead" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recognitionResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            app:layoutManager="LinearLayoutManager"  />

</merge>
